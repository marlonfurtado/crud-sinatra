<%= @header %>

<body>
  <header class="row-fluid text-center">
    <h2>Contact List</h2>
  </header>
  <section class="row-fluid">
    <section class="span12">

      <form action="/contact" method="post" class="well form-inline">
        <input type="text" name="contact[name]" placeholder="Name">
        <input type="text" name="contact[lastname]" placeholder="Lastname">
        <input type="tel" name="contact[phone]" placeholder="Phone">
        <input type="email" name="contact[email]" placeholder="E-mail">
        <button type="submit" class="btn btn-primary">OK</button>
      </form>

      <table class="table well">
        <thead>
          <tr>
            <th>Name</th>
            <th>Lastname</th>
            <th>Phone</th>
            <th>E-mail</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.phone %></td>
            <td><%= user.email %></td>
            <td>
              <span id="notify_<%= user.email %>" class="label label-default">Offline</span>
            </td>
            <td>
              <a href="/contact/<%= user.id %>" class="btn btn-default">Details</a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </section>

</body>
</html>
